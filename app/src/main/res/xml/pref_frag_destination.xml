<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
  
  <EditTextPreference
      android:key="hostname"
      android:title="Hostname"
      android:summary=""
      android:dialogTitle="Hostname"
      android:inputType="text"
      android:defaultValue="localhost" />
  
  <EditTextPreference
      android:key="username"
      android:title="Username"
      android:summary=""
      android:dialogTitle="Username"
      android:inputType="text"
      android:defaultValue="someone" />
  
  <EditTextPreference
      android:key="directory"
      android:title="Directory"
      android:summary=""
      android:dialogTitle="Directory"
      android:inputType="text"
      android:defaultValue="/home/someone" />

  <jp.ddo.masm11.esback.GenerateKeyPairPreference
      android:key="gen_keypair"
      android:title="Generate key pair"
      android:summary=""
      />
  
</PreferenceScreen>
